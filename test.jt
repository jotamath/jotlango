// Teste completo das funcionalidades do JotLang
class Test {
    // Propriedades da classe
    prop string Nome
    prop int Idade
    prop float Salario

    // Construtor
    fn New() : void {
        Nome = "João"
        Idade = 25
        Salario = 0.0
    }

    // Método principal
    fn Main() : void {
        print("Teste de interpolação de strings")
        
        var mensagem = "Olá, meu nome é " + Nome + " e tenho " + Idade + " anos."
        print(mensagem)
        
        var nome = "Maria"
        var idade = 30
        print("Olá, meu nome é " + nome + " e tenho " + idade + " anos.")
    }

    // Funções auxiliares
    fn somar(a int, b int) : int {
        return a + b
    }

    fn imprimirMensagem(mensagem string) : void {
        print("Mensagem: " + mensagem)
    }

    fn calcularMedia(a int, b int, c int) : float {
        return (a + b + c) / 3.0
    }
}

// Classe de exemplo
class Pessoa {
    prop string Nome
    prop int Idade
    prop float Salario

    fn New() : void {
        Nome = "João"
        Idade = 25
        Salario = 6000.0
    }

    fn Apresentar() : void {
        print("Olá, meu nome é " + Nome + " e tenho " + Idade + " anos.")
    }

    fn CalcularAumento(percentual int) : float {
        return Salario * (1 + (percentual / 100.0))
    }
} 